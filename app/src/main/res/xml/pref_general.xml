<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="@string/location_key"
        android:title="@string/pref_title_edit_location"
        android:defaultValue="@string/default_location"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:maxLines="1" />
    <ListPreference
        android:key="@string/units_key"
        android:title="@string/units_title"
        android:defaultValue="@string/metric"
        android:entryValues="@array/units_array_values"
        android:entries="@array/units_array"/>


</PreferenceScreen>
